{
    "name": "BERT-FT-computers-small-swctest",
    "n_gpu": 1,

    "arch": {
        "type": "BertModelLogit",
        "args": {}
    },
    "data_loader": {
        "type": "BertDataLoader",
        "args":{
            "data_dir": "data/",
            "file": "../../data/processed/wdc-lspc/bert/preprocessed_computers_new_testset_1500_bert_cutBTDS.pkl.gz",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 8,
            "max_length": 512,
            "mlm": false
        }
    },
    "loss": "BCEWithLogitsLoss",
    "pos_neg_ratio": 1,
    "metrics": [
        "accuracy","tp","fp","tn","fn"
    ],
    "save_predictions": true
}
