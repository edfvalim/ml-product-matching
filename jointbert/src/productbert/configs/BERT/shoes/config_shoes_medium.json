{
    "name": "BERT-FT-shoes-medium",
    "n_gpu": 1,

    "arch": {
        "type": "BertModelLogit",
        "args": {}
    },
    "data_loader": {
        "type": "BertDataLoader",
        "args":{
            "data_dir": "data/",
            "file": "../../data/processed/wdc-lspc/bert/preprocessed_shoes_train_medium_bert_cutBTDS.pkl.gz",
            "valid_file": "../../data/raw/wdc-lspc/validation-sets/shoes_valid_medium.csv",
            "batch_size": 8,
            "valid_batch_size": 32,
            "shuffle": true,
            "validation_split": -1,
            "num_workers": 8,
            "max_length": 512,
            "mlm": false
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 5e-5,
            "weight_decay": 0.01
        }
    },
    "clip_grad": 1.0,
    "loss": "BCEWithLogitsLoss",
    "pos_neg_ratio": 4,
    "metrics": [
        "accuracy","tp","fp","tn","fn"
    ],
    "lr_scheduler": {
        "type": "get_linear_schedule_with_warmup",
        "args": {
            "num_warmup_steps": -1,
            "num_training_steps": -1
        },
        "step_every_batch": true
    },
    "trainer": {
        "type": "standard",
        "epochs": 50,
        "accumulation_steps": 4,

        "save_dir": "saved/",
        "save_period": 1,
        "only_best": true,
        "verbosity": 2,

        "monitor": "max val_f1",
        "early_stop": 10,

        "tensorboard": true
    },
    "save_hf_config": true
}
