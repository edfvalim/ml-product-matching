{
    "name": "BT-DistilBERT-FT-shoes-large-train",
    "n_gpu": 1,

    "arch": {
        "type": "DistilBertModelLogit",
        "args": {}
    },
    "data_loader": {
        "type": "BertDataLoader",
        "args":{
            "data_dir": "data/",
            "file": "../../data/processed/wdc-lspc/bert/preprocessed_shoes_train_large_bert_cutBT_titleonly.pkl.gz",
            "batch_size": 128,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 8,
            "tokenizer_name": "distilbert-base-uncased",
            "max_length": 512,
            "mlm": false
        }
    },
    "loss": "BCEWithLogitsLoss",
    "pos_neg_ratio": 6,
    "metrics": [
        "accuracy","tp","fp","tn","fn"
    ],
    "save_predictions": true
}
